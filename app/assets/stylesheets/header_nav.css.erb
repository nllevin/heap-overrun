.header-nav {
  position: fixed;
  top: 0;
  width: 100%;
  height: 50px;
  background-color: #fafafb;
  border-top: 3px solid #F48024;
  box-shadow: 0 1px 0 rgba(12,13,14,0.1), 0 1px 6px rgba(59,64,69,0.1);
  z-index: 1;
}

.header-nav header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  max-width: 1264px;
  margin: 0 auto;
  height: 100%;
}

.nav-link {
  height: 100%;
  cursor: pointer;
  display: flex;
  align-items: center;
  position: relative;
}

.nav-link:hover {
  background-color: rgba(239, 240, 241, 0.75);
}

.logo {
  position: relative;
  padding: 0 8px;
  font-size: 20px;
  display: flex;
  align-items: center;
  width: 166px;
}

.logo b {
  margin-left: 1px;
}

.so-icon {
  background-image: url("<%= image_url('so-icon.png') %>");
  background-size: cover;
  height: 50px;
  width: 40px;
  background-position: -10px 0;
}

.logo span {
  position: absolute;
  top: 15px;
  left: 37px;
}

div.search-bar {
  max-width: 750px;
  flex: 1 1;
  margin-left: 12px;
  margin-right: 24px;
}

.search-bar form {
  position: relative;
}

.search-bar input {
  background-color: white;
  padding-left: 32px;
}

.search-icon {
  background-image: url("<%= image_url('search-icon.png') %>");
  background-size: cover;
  background-position: -2px;
  width: 18px;
  height: 18px;
  filter: grayscale(1) opacity(0.3);
  position: absolute;
  top: 8px;
  left: 8px;
  cursor: text;
}
