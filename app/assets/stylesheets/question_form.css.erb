.question-form {
  min-height: 100%;
  height: fit-content;
  width: 100%;
  background-color: #eff0f1;
  padding: 0 24px 24px 24px;
}

.question-form > div {
  max-width: 1264px;
  margin: 0 auto;
}

.question-form header {
  height: 130px;
  padding: 24px 0;
  display: flex;
  align-items: center;
  background-image: url("<%= image_path('question-ask.svg') %>");
  background-position: right bottom;
  background-repeat: no-repeat;
}

.question-form h1 {
  font-size: 27px;
}

.question-form main {
  display: flex;
}

.question-form-container {
  flex: 1 1;
}

.question-form form {
  box-shadow: 0 4px 8px rgba(59, 64, 69, 0.2);
  padding: 16px;
  background-color: white;
  border-radius: 3px;
}

.question-form label:first-of-type {
  margin-bottom: 16px;
}

.question-form label div {
  margin-bottom: 4px;
  padding: 0 2px;
  cursor: pointer;
}

.question-form h3 {
  font-size: 15px;
  font-weight: 700;
}

.question-form span {
  margin-top: 2px;
  font-size: 12px;
  font-weight: 400;
}

.question-form textarea {
  padding: 10px;
  height: 200px;
  line-height: 1.3;
  width: 100%;
  font-size: 14px;
  tab-size: 4;
  border: 1px solid #bbc0c4;
  resize: none;
}

.question-form div > button {
  margin-top: 32px;
}