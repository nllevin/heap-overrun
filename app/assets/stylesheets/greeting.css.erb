.greeting {
  display: flex;
  align-items: center;
  padding-right: 8px;
  height: 100%;
}

.avatar {
  width: 24px;
  height: 24px;
  color: white;
  background-color: #34495e;
  border-radius: 2px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0px 10px;
  font-size: 12px;
}

.avatar:hover {
  background-color: #34495e;
}

.stack-exchange {
  background-image: url("<%= image_url('stack-exchange.png') %>");
  background-size: 25px 18px;
  background-repeat: no-repeat;
  background-position: center;
  height: 100%;
  width: 28px;
  filter: grayscale(1);
  padding: 0 5px;
  box-sizing: content-box;
}

.greeting .button:first-of-type {
  color: #07C;
  background-color: transparent;
  border: transparent;
  box-shadow: none;
  margin-right: 3px;
}

.greeting .button:first-of-type:hover,
.greeting .button:first-of-type:focus,
.greeting .button:first-of-type:active {
  color: #005999;
  background-color: rgba(0, 119, 204, 0.1);
  box-shadow: none;
}

.greeting .button:focus,
.greeting .button:active {
  border-color: #005999;
  box-shadow: inset 0 1px 0 #3af;
}