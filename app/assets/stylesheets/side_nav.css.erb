div.side-nav-container {
  width: 165px;
  position: relative;
}

.globe {
  background-image: url("<%= image_url('globe.png') %>");
  background-size: cover;
  background-repeat: no-repeat;
  width: 16px;
  height: 16px;
  filter: grayscale(1);
  background-position: -2px;
  position: absolute;
  left: 10px;
  top: 7px;
}

.side-nav a.active .globe,
.side-nav a:hover .globe {
  filter: brightness(0);
}

.side-nav {
  position: fixed;
  top: 50px;
  height: 100%;
  padding-top: 24px;
  background-color: white;
  width: 165px;
  border-right: 1px solid #d6d9dc;
}

.side-nav a {
  color: #535a60;
  padding: 4px 4px 4px 30px;
  line-height: 1.8;
  font-size: 13px;
  cursor: pointer;
  position: relative;
}

.with-icon {
  padding-top: 8px;
  padding-bottom: 8px;
}

.side-nav > a {
  padding-left: 8px;
}

.side-nav a:hover {
  color: #0C0D0E;
}

.side-nav a.active {
  font-weight: bold;
  background-color: rgba(12, 13, 14, 0.05);
  color: #0C0D0E;
  border-right: 3px solid #F48024;
}

.side-nav h3 {
  color: #6a737c;
  font-size: 11px;
  margin: 16px 0 4px 8px;
}