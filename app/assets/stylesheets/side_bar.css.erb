.side-bar {
  margin-left: 24px;
  width: 300px;
}

.side-bar h3 {
  font-size: 18px;
  margin-bottom: 18px;
}

.side-bar li {
  margin-bottom: 10px;
  display: flex;
}

.side-bar .se-icon {
  background-image: url("<%= image_url('se-icon.png') %>");
  height: 16px;
  width: 16px;
  background-size: cover;
  margin-right: 6px;
}

.side-bar a {
  font-size: 12px;
  width: 90%;
  color: #005999;
  cursor: pointer;
}

.side-bar a:hover {
  color: #3af;
}