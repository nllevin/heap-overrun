div.search-bar {
  max-width: 750px;
  width: 100%;
  flex: 1 1;
  margin-left: 12px;
  margin-right: 24px;
}

.search-bar form {
  position: relative;
  display: flex;
}

.search-bar label {
  flex: 1 1;
  display: flex;
}

.search-bar input {
  background-color: white;
  padding-left: 32px;
}

.search-bar .button {
  min-width: 0;
  margin-left: 8px;
}

.search-icon {
  background-image: url("<%= image_url('search-icon.png') %>");
  background-size: cover;
  background-position: -2px;
  width: 18px;
  height: 18px;
  filter: grayscale(1) opacity(0.4);
  position: absolute;
  top: 8px;
  left: 8px;
  cursor: text;
}

.search-results {
  margin-top: 24px;
}

.search-results .search-icon {
  display: none;
}

.search-results form {
  margin-bottom: 24px;
}

.search-results input {
  padding-left: 9.1px;
}

.header-nav .search-bar button {
  display: none;
}

header > div.search-results {
  display: block;
}

.search-results .search-bar {
  margin-left: 0;
}

.search-results p {
  margin-right: 2px;
  margin-bottom: 16px;
  font-size: 12px;
  color: #6a737c;
}

.search-results h3 {
  font-size: 17px;
}
